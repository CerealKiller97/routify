{
    "name": "@roxi/routify",
    "version": "0.0.1",
    "main": "lib/runtime/index.js",
    "type": "module",
    "imports": {
        "#lib/*": "./lib/*.js",
        "#typedef": "./typedef.js"
    },
    "scripts": {
        "test": "run-s test:*",
        "build": "run-s build:*",
        "test:prettier": "prettier -c --plugin-search-dir=. \"{common,lib,plugins,test}/**/*.{js,svelte}\"",
        "test:uvu": "uvu test  \"(spec|test)\\.js$\" -i dist",
        "build:documentation": "documentation readme typedef.js -f md --section API",
        "build:prettier": "npm run format",
        "format": "prettier --write --plugin-search-dir=. \"{common,lib,plugins,test}/**/*.{js,svelte}\"",
        "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js ."
    },
    "author": "jakobrosenberg@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.13.15",
        "@babel/eslint-parser": "^7.13.14",
        "@babel/plugin-syntax-class-properties": "^7.12.13",
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@types/jest": "^26.0.23",
        "ava": "4.0.0-alpha.2",
        "documentation": "^13.2.1",
        "eslint": "^7.24.0",
        "eslint-plugin-jest": "^24.3.6",
        "jest": "^26.6.3",
        "jest-playwright-preset": "^1.5.2",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.10.0",
        "prettier": "^2.2.1",
        "prettier-plugin-svelte": "^2.2.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.1.0",
        "spassr": "^2.6.0",
        "uvu": "^0.5.1"
    },
    "dependencies": {
        "cheerio": "^0.x",
        "chokidar": "^3.5.1",
        "fs-extra": "^9.1.0",
        "svelte": "^3.37.0"
    },
    "prettier": {
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "svelteSortOrder": "options-scripts-markup-styles",
        "svelteAllowShorthand": true,
        "svelteBracketNewLine": false,
        "svelteIndentScriptAndStyle": true
    }
}
